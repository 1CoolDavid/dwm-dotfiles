#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print ïª€and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo ïª€ && exit

vol="${vol#Volume: }"
split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}
vol="$(split "$vol" ".")"
vol="${vol##0}"

case 1 in
	$((vol >= 70)) ) icon="ï€¨ " ;;
	$((vol >= 30)) ) icon="ï©½ " ;;
	$((vol >= 1)) ) icon="ï€§ " ;;
	* ) echo "ïª€ " && exit ;;
esac

echo "$icon$vol%"
